[Unit]
Description=Switchify Network Failover Agent
After=network-online.target
Wants=network-online.target

[Service]
User=root
WorkingDirectory=/opt/switchify-agent
ExecStart=/opt/switchify-agent/switchify-agent
Restart=always
RestartSec=3

Environment=SWITCHIFY_BACKEND_TOKEN=YOUR_TOKEN_HERE

# Hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
